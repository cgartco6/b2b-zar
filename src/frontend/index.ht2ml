<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>B2B ZAR Marketplace - South Africa's Premier B2B Platform</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">
    <link rel="stylesheet" href="css/cart.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="logo">
                <h1>B2B ZAR Marketplace</h1>
            </div>
            <nav class="nav">
                <ul>
                    <li><a href="#home">Home</a></li>
                    <li><a href="#products">Products</a></li>
                    <li><a href="#services">Services</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </nav>
            <div class="header-actions">
                <div class="cart-icon" id="cartIcon">
                    ðŸ›’ <span class="cart-count">0</span>
                </div>
                <button class="login-btn">Business Login</button>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section id="home" class="hero">
        <div class="container">
            <div class="hero-content">
                <h1>South Africa's Premier B2B Marketplace</h1>
                <p>Connecting businesses with trusted suppliers across South Africa</p>
                <div class="search-bar">
                    <input type="text" placeholder="Search products, suppliers, categories...">
                    <button class="search-btn">Search</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Products Section -->
    <section id="products" class="products">
        <div class="container">
            <h2>Featured Products</h2>
            <div class="product-grid" id="productGrid">
                <!-- Products will be loaded dynamically -->
            </div>
        </div>
    </section>

    <!-- AI Chatbot -->
    <div class="chatbot-widget">
        <div class="chatbot-header">
            <span>Bronwyn - AI Support</span>
            <button class="minimize-btn">âˆ’</button>
        </div>
        <div class="chatbot-messages" id="chatMessages">
            <div class="message bot-message">
                Hi! I'm Bronwyn, your AI business assistant. How can I help you today?
            </div>
        </div>
        <div class="chatbot-input">
            <input type="text" id="chatInput" placeholder="Ask me anything...">
            <button id="sendMessage">Send</button>
        </div>
    </div>

    <!-- Shopping Cart Modal -->
    <div id="cartModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Shopping Cart</h2>
            <div class="cart-items" id="cartItems">
                <!-- Cart items will be populated here -->
            </div>
            <div class="cart-total">
                Total: ZAR <span id="cartTotal">0.00</span>
            </div>
            <button class="checkout-btn">Proceed to Checkout</button>
        </div>
    </div>

    <script src="js/main.js"></script>
    <script src="js/cart.js"></script>
    <script src="js/ai-integration.js"></script>
</body>
</html>
